#!/bin/bash
# xenobot

# TODO:
# - Check that python3 exists and that it is python3.8, if not ry running python3.8
# directly

pipe=tmp/botpipe

usage() {
  echo "Usage: $0 (start [-g guild -p db_path] |"
  echo "           gather [-g guild -p db_path -d earliest_date] |"
  echo "           stop)"
}

check_pipe() {
  if [[ ! -p $pipe ]]; then
    echo "Could not find pipe: $pipe"
    exit 1
  fi
}

main(){
  if [[ ${#} == 0 ]]; then
    $usage;
  fi

  case ${1} in
    start)
      ${1};
      ;;
    gather)
      $check_pipe
      ${1} "${@:2}";
      ;;
    stop)
      $check_pipe
      ${1}
      ;;
    *)
      echo $usage;
      exit 1;
      ;;
  esac
}

start(){
  python3.8 bot.py "$@"
}

gather(){
  echo "$@" >$pipe
  python3.8 gather.py "$@"
}

stop(){
  echo "$@" 
}
  
main "$@";
exit 0
