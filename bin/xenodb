#!/bin/bash
# xenodb

usage() {
  echo "Usage: $0 (create|reset)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

case $1 in
  "create")
    if (test -e var/xenodb.sqlite3) then echo "Error: database already exists"; exit 1; fi
    mkdir -p var/
    sqlite3 var/xenodb.sqlite3 < sql/schema.sql
    ;;

  "reset")
    rm -r mkdir -p var/
    mkdir -p var/
    sqlite3 var/xenodb.sqlite3 < sql/schema.sql
    ;;
    
  *)
    usage
    exit 1
esac
